---
// JobSection uses ResumeSection to format job experience.

import Section from "../components/ResumeSection.astro";

interface Props {
  title: string;
  start_date: string;
  end_date: string;
  details: Array<{
    detail: string;
    subdetails: Array<string>;
  }>;
}

const { title, start_date, end_date, details } = Astro.props;
---

<Section title={title}>
  <p class="pl-8 text-2xl h-8 mb-2">{start_date} - {end_date}</p>
  <ul class="pl-12 text-xl list-disc">
    {
      details.map((d) => (
        <>
          <li>{d.detail}</li>
          <ol class="list-decimal pl-8">
            {d.subdetails.map((sd) => (
              <li>{sd}</li>
            ))}
          </ol>
        </>
      ))
    }
  </ul>
</Section>
