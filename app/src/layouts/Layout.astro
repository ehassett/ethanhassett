---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full w-full">
  <head>
    <meta
      name="description"
      content="Cloud & DevOps engineer open to new opportunities worldwide."
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <link rel="apple-touch-icon" href="/icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>

  <body
    class="h-full w-full bg-light-100 font-departure-mono text-dark-500 dark:bg-dark-500 dark:text-light-100"
  >
    <Header />
    <div class="grid h-3/4 w-full grid-cols-1 grid-rows-3 2xl:grid-cols-3">
      <div
        class="row-start-2 flex flex-col items-center justify-center 2xl:col-start-2"
      >
        <slot />
      </div>
    </div>
    <Footer />
  </body>
</html>
