---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta
      name="description"
      content="Cloud & DevOps engineer open to new opportunities worldwide."
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/icon.svg" />
    <link rel="icon" type="image/png" href="/icon.png" />
    <link rel="apple-touch-icon" href="/icon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{title}</title>
  </head>

  <body
    class="bg-light-100 font-departure-mono text-(length:--step--1) text-dark-500 dark:bg-dark-500 dark:text-light-100"
  >
    <main class="flex min-h-screen flex-col justify-between">
      <Header />
      <section class="u-container">
        <slot />
      </section>
      <Footer />
    </main>
  </body>
</html>
